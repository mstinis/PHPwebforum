<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/styles/bulma.min.css">
        <link rel="stylesheet" href="/styles/custom.css">
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
    {% block headExtra %}{% endblock %}
</head>
<body>
    <div class="container">
        <nav class="nav" id="header">
            <div class="nav-left">
                {% if user %}
                    <span class="nav-item">Welcome, {{ user.username }}</span> 
                    <div class="nav-item">
                        <a class="button" href="/logout">Logout</a>
                    </div>
                {% else %}
                    <div class="nav-item">
                        <div class="field is-grouped">
                            <p class="control">
                                <a class="button" href="/login">Login</a>
                            </p>
                            <p class="control">
                                <a class="button" href="/register">Register</a>
                            </p>
                        </div>
                    </div>
                {% endif %}
                <div class="nav-item">
                    <a class="button" href="/">All boards</a>
                </div>
            </div>
            <div class="nav-right">
                <div class="nav-item">
                    <div class="field has-addons">
                        <form method="get" action="/search">
                            <p class="control">
                                <input class="input" type="text" name="keywords">
                            </p>
                            <p class="control">
                                <input class="button" type="submit" value="Search">
                            <p>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <section class="section">             
        <div class="container" id="content">
            {% block content %}
            {% endblock %}
        </div>
    </section>
    <footer class="footer">
        <div class="container">
            <div class="content has-text-centered">
                {% block footer %}
                    <p>
                        &copy; Copyright 10,000 BC by <a href="http://domain.invalid/">Matthew</a>
                    </p>
                {% endblock %}
            </div>
        </div>
    </footer>

</body>
</html>