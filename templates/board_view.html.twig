{% extends "master.html.twig" %}

{% block title %}Board: {{board.title}}{% endblock title %}

{% block content %}

<section>
    <h1>{{board.title}}</h1>
    <a href="/board/{{board.boardId}}/newthread">Start new thread</a>
    <p>Threads:</p>
    {% for thread in threadList %}
        <a href="/thread/{{thread.threadId}}">{{thread.title}}</a><br>
    {% endfor %}
</section>
    
{% endblock content %}