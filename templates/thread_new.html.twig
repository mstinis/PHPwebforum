{% extends "master.html.twig" %}

{% block title %}New Thread{% endblock title %}

{% block content %}

    {% if errorList %}
        <ul class="errorList">
            {% for error in errorList %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>            
    {% endif %} 

    <h1 class="title is-1">New thread in {{ board.title }}</h1>
    <form method='post'>
        <div class="field">
            <label class="label">Thread Topic<label>
            <p class="control">
                <input class="input" type='text' name='title' placeholder="Insert thread topic">
            </p>
        </div>
        <div class="field">
            <label class="label">Whatchugot?<label>
            <p class="control">
                <textarea class="textarea" name='body' placeholder="Enter body here..."></textarea>
            </p>
        </div>
        <input class="button" type='submit' value='Create new thread'>
    </form>
{% endblock content %}
